<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="Typos">
    <!-- Error shown when the HTTP response is too large to be loaded into memory. %s is a placeholder for the size limit, e.g. "1 MB") -->
    <string name="error_response_too_large">"Response zu gross um angezeigt zu werden (maximal %s)"</string>

    <!-- Label above input box, for step size (numeric) value of a horizontal slider -->
    <string name="label_variable_slider_step">"Schrittgrösse"</string>

    <!-- error message displayed when "Maximum" is lesser than or equal to "Minimum" for "slider" variable type -->
    <string name="error_slider_max_not_greater_than_min">"Der Maximalwert muss grösser sein als der Minimalwert."</string>

    <!-- error message displayed when "Step Size" is not a positive number for "slider" variable type -->
    <string name="error_slider_step_size_must_be_positive">"Die Schrittgrösse muss grösser als 0 sein."</string>

    <!-- Dialog option: shown in code snippet picker, option to get the size of a selected file -->
    <string name="dialog_code_snippet_get_file_size">"Grösse (in Bytes) von ausgewählter Datei auslesen"</string>

    <!-- Label for option in shortcut editor, selecting it will cause the shortcut to not appear in the event history anymore when it is triggered -->
    <string name="label_exclude_from_history">"Von Verlauf ausschliessen"</string>

    <!-- Dialog message, shown when configuring a shortcut to run repeatedly, to prompt the user to enable the "Draw over apps" option -->
    <string name="message_run_repeatedly_dialog_configure_app_overlay">"Um einen Shortcut automatisch wiederholt ausführen zu können, musst du zuerst der HTTP Shortcuts App erlauben, über anderen Apps angezeigt werden zu können.

Tippe dazu den ”%s”-Knopf unten um dies einzurichten.

Zusätzlich musst du eventuell auch noch die App von Akku-Optimierungen ausschliessen. Du findest diese Option in den Einstellungen."</string>

    <!-- Title of setting that allows the user to have the app ignore battery optimization modes. This is a troubleshooting option, to prevent scheduled requests from failing -->
    <string name="settings_ignore_battery_optimizations">"Von Akku-Optimierung ausschliessen"</string>

    <!-- Label for dropdown in shortcut editor, for picking the font size in which the response should be displayed -->
    <string name="label_font_size">Schriftgrösse</string>
    <!-- Option in font size drop down: Large -->
    <string name="font_size_large">Gross</string>
    <!-- Option in font size drop down: Very large -->
    <string name="font_size_very_large">Sehr gross</string>
    <!-- Instructions shown below the "IExclude stored value from exports" checkbox in the variable editor -->
    <string name="message_exclude_variable_value_from_exports_instructions">Aktiviere diese Option, wenn du den gespeicherten Wert dieser Variable von jeglichen Exporten ausschliessen möchtest.</string>
    <!-- Label: Shown when configuring a widget, above a slider, to choose the size of the widget's icon -->
    <string name="label_widget_icon_size">Symbolgrösse</string>
    <!-- Accessibility label for the generic "close" cross button in the nav bar -->
    <string name="accessibility_label_close">Schliessen</string>
</resources>
